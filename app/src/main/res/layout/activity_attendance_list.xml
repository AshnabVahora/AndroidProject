<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="50dp"
            android:padding="5dp"
            android:src="@drawable/ic_back"
            android:layout_height="match_parent"></ImageView>
        <TextView
            android:layout_toRightOf="@+id/navDrawer"
            android:layout_width="wrap_content"
            android:text="Attendance List"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="match_parent"></TextView>
    </RelativeLayout>
    <LinearLayout
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="4"
            android:id="@+id/lilMain"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:background="#f5f5f5"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1.2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/profile"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:backgroundTint="@color/white"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/round_background"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="2.8"
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txtName"
                    android:text="Kishan Vajani"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/txtDesignation"
                    android:text="Android Developer"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/txtNicNumber"
                    android:text="123"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>


        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:scrollbars="vertical"
            tools:listitem="@layout/attendance_list_item"
            android:id="@+id/recyclerView">

        </androidx.recyclerview.widget.RecyclerView>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:layout_gravity="center|bottom"
            android:gravity="bottom|center"
            android:layout_marginTop="15dp"
            android:layout_height="0dp">
            <LinearLayout
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:weightSum="6"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="45dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_left_arrow"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txtStartDate"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="12/12/2020"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_right_arrow"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="15dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center"
                android:weightSum="6"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="45dp">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_left_arrow"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="4"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txtEndDate"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:text="12/12/2020"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:layout_height="wrap_content"></TextView>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/ic_right_arrow"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnGenerate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/button_gradient"
                        android:text="@string/generate_pay_slip"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>