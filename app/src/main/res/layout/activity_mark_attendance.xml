<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:layout_height="match_parent">
    <RelativeLayout
        android:orientation="horizontal"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/black"
        app:popupTheme="@style/AppTheme.PopupOverlay" >
        <ImageView
            android:id="@+id/ic_back"
            android:layout_width="50dp"
            android:padding="5dp"
            android:src="@drawable/ic_back"
            android:layout_height="match_parent"></ImageView>
        <TextView
            android:layout_toRightOf="@+id/navDrawer"
            android:layout_width="wrap_content"
            android:text="Mark Attendace"
            android:textSize="25sp"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_height="match_parent"></TextView>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="4"
                android:id="@+id/lilMain"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:background="#f5f5f5"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1.2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:backgroundTint="@color/white"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/round_background"
                        android:padding="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profile"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2.8"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txtName"
                        android:text="Kishan Vajani"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:paddingTop="5dp"
                        android:id="@+id/txtDesignation"
                        android:text="Android Developer"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                        android:paddingTop="5dp"
                        android:id="@+id/txtNicNumber"
                        android:text="123"
                        android:textColor="@color/colorPrimary"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/dateView"
                android:weightSum="4"
                android:visibility="visible"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/white"
                android:gravity="center"
                app:popupTheme="@style/AppTheme.PopupOverlay" >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Date"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textSize="20dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_height="wrap_content"></TextView>

                <LinearLayout
                    android:background="@color/darkBlue"
                    android:layout_toRightOf="@+id/navDrawer"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_marginRight="15dp"
                    android:text="Employees List"
                    android:textSize="25sp"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:weightSum="6"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_height="45dp">
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_left_arrow"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1.5"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"

                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtDay"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="Saturday"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="2.5"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/txtDate"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="12/12/2020"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"></TextView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:src="@drawable/ic_right_arrow"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:background="@color/darkBlue"
                android:layout_width="match_parent"
                android:textSize="25sp"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radioPresent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Present"
                            android:textSize="15sp"
                            android:checked="true"
                            android:textStyle="bold"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"/>

                        <RadioButton
                            android:id="@+id/radioHalfDay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Half Day"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"/>
                        <RadioButton
                            android:id="@+id/radioOverTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Overtime"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <RadioButton
                            android:id="@+id/radioAbsent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Absent"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"/>

                        <RadioButton
                            android:id="@+id/radioDouble"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Double"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"/>
                        <RadioButton
                            android:id="@+id/radioPaidLeave"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Paid Leave"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:buttonTint="@color/white"
                            android:textColor="@color/white"
                            android:layout_marginLeft="5dp"/>
                    </LinearLayout>

            </LinearLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/basicPayError"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/basicPay"
                    android:drawablePadding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/basic_pay_day"
                    android:focusable="false"
                    android:inputType="none"

                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:paddingLeft="5dp" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/taxDebitError"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/taxDebit"
                    android:drawablePadding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/tax_debit"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:paddingLeft="5dp" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/bonusError"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/bonus"
                    android:drawablePadding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="@string/bonus"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:paddingLeft="5dp" />

            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/totalPaymentError"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/totalPayment"
                    android:drawablePadding="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Total Payment"
                    android:focusable="false"
                    android:inputType="none"
                    android:maxLines="1"
                    android:paddingStart="5dp"
                    android:singleLine="true"
                    android:paddingLeft="5dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:id="@+id/lilUpdateDelete"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="2"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/button_gradient"
                        android:text="@string/update"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/button_gradient"
                        android:text="@string/delete"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
               android:id="@+id/lilSubmit"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/btnsubmit"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="20dp"
                        android:background="@drawable/button_gradient"
                        android:text="Submit Attendace"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>